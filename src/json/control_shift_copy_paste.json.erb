{
    "title": "Map Control_Shift + C/V to copy/paste in term (ala Linux)",
    "maintainers": ["jjo"],
    "rules": [
        {
            "description": "Map Control_Shift + C/V to copy/paste in term (ala Linux)",
            "manipulators": [
                {
                    "type": "basic",
                    "conditions": [ <%= frontmost_application_if("terminal") %> ],
                    "from": <%= from("c", ["control", "left_shift"], ["any"]) %>,
                    "to": <%= to([["c", ["command"]]]) %>
                },
                {
                    "type": "basic",
                    "conditions": [ <%= frontmost_application_if("terminal") %> ],
                    "from": <%= from("v", ["control", "left_shift"], ["any"]) %>,
                    "to": <%= to([["v", ["command"]]]) %>
                }
            ]
        }
    ]
}
